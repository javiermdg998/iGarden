<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lbl_temperatura"
        android:layout_width="95dp"
        android:layout_height="54dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="112dp"
        android:text="@string/no_data"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_regadera"
        android:layout_width="161dp"
        android:layout_height="165dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toStartOf="@+id/lbl_temperatura"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/img_gota"
        android:layout_width="158dp"
        android:layout_height="141dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_bombilla"
        app:srcCompat="@mipmap/ic_gota" />

    <ImageView
        android:id="@+id/img_termometro"
        android:layout_width="159dp"
        android:layout_height="142dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_gota"
        app:srcCompat="@mipmap/ic_termometro" />

    <ImageView
        android:id="@+id/img_bombilla"
        android:layout_width="163dp"
        android:layout_height="136dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_regadera"
        app:srcCompat="@mipmap/ic_bombilla" />

    <TextView
        android:id="@+id/lbl_luz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="96dp"
        android:text="@string/no_data"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/img_bombilla"
        app:layout_constraintTop_toBottomOf="@+id/lbl_temperatura" />

    <TextView
        android:id="@+id/lbl_humidity"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:text="@string/no_data"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/img_gota"
        app:layout_constraintTop_toBottomOf="@+id/lbl_luz" />

    <TextView
        android:id="@+id/lbl_humid"
        android:layout_width="121dp"
        android:layout_height="64dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:text="@string/no_data"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/img_termometro"
        app:layout_constraintTop_toBottomOf="@+id/lbl_humidity" />


</androidx.constraintlayout.widget.ConstraintLayout>